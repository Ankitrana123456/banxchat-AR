rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Conversations
    match /convos/{convoId} {
      allow read, write: if request.auth != null && request.auth.uid in convoId.split('|');
      match /msgs/{msgId} {
        allow read: if request.auth != null && request.auth.uid in convoId.split('|');
        allow create: if request.auth != null && request.auth.uid == request.resource.data.from;
        allow update: if request.auth != null && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
        allow delete: if request.auth != null && request.auth.token.role == 'admin';
      }
      match /meta/{metaId} { allow read, write: if request.auth != null && request.auth.uid in convoId.split('|'); }
    }

    // Groups
    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow update: if request.auth != null && request.auth.token.role == 'admin';
      match /msgs/{msgId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      }
    }

    // Channels (official)
    match /channels/{channelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
      match /members/{memberId} { allow read: if request.auth != null; allow create: if request.auth != null; }
      match /msgs/{msgId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.token.role == 'admin';
      }
    }

    // Calls
    match /calls/{callId} { allow read, write: if request.auth != null; }
  }
        }
